<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_corner_view">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/caesardressingregular"
        android:text="@string/app_login"
        android:textColor="@color/app_yellow"
        android:textSize="44sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/closeView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/ic_shape"
        android:fontFamily="@font/aqua"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_layer_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/sfprodisplayregular"
        android:text="@string/app_login_content"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label" />


    <EditText
        android:id="@+id/userNameView"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/oval_shape_white"
        android:fontFamily="@font/aqua"
        android:hint="Username"
        android:text="1024"
        android:singleLine="true"
        android:textColorHint="@color/app_lite_grey"
        android:textColor="@color/app_lite_grey"
        android:paddingLeft="25dp"
        android:textColorHighlight="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/header_layer_content"
        app:layout_constraintStart_toStartOf="@+id/header_layer_content"
        app:layout_constraintTop_toBottomOf="@+id/header_layer_content" />

    <EditText
        android:id="@+id/passwordView"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/oval_shape_white"
        android:fontFamily="@font/aqua"
        android:hint="Password"
        android:paddingLeft="25dp"
        android:singleLine="true"
        android:text="gkenglish"
        android:inputType="textPassword"
        android:textColor="@color/app_lite_grey"
        android:textColorHint="@color/app_lite_grey"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/header_layer_content"
        app:layout_constraintStart_toStartOf="@+id/header_layer_content"
        app:layout_constraintTop_toBottomOf="@+id/userNameView" />

    <TextView
        android:id="@+id/loginView"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:padding="5dp"
        android:textAllCaps="false"
        style="@style/AppTheme.RoundedCornerMaterialButton"
        android:fontFamily="@font/aqua"
        app:layout_constraintEnd_toEndOf="@+id/header_layer_content"
        app:layout_constraintStart_toStartOf="@+id/header_layer_content"
        app:layout_constraintTop_toBottomOf="@+id/passwordView"
        android:text="@string/getstart"/>

</androidx.constraintlayout.widget.ConstraintLayout>