<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="300dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@color/app_background_dialog">

    <TextView
        android:id="@+id/header_layer_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/sfprodisplayregular"
        android:text="@string/app_extend_by"/>

    <EditText
        android:id="@+id/extended_time"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/oval_shape_white"
        android:fontFamily="@font/aqua"
        android:hint="Enter time (mins)"
        android:text=""
        android:textColorHint="@color/app_lite_grey"
        android:textColor="@color/black"
        android:paddingLeft="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColorHighlight="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_layer_content" />

    <TextView
        android:id="@+id/time_one"
        android:layout_width="0dp"
        android:text="15m"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/aqua"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/time_two"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/extended_time"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/extended_time"
        android:background="@drawable/oval_shape_black" />

    <TextView
        android:id="@+id/time_two"
        android:layout_width="0dp"
        android:text="30m"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="20sp"
        android:fontFamily="@font/aqua"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/extended_time"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/time_one"
        app:layout_constraintEnd_toStartOf="@+id/time_three"
        android:background="@drawable/oval_shape_black" />

    <TextView
        android:id="@+id/time_three"
        android:layout_width="0dp"
        android:text="45m"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/aqua"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/time_two"
        app:layout_constraintTop_toBottomOf="@+id/extended_time"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/extended_time"
        android:background="@drawable/oval_shape_black" />

    <TextView
        android:id="@+id/confirmView"
        android:layout_width="0dp"
        android:text="Confirm"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20sp"
        android:fontFamily="@font/aqua"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/time_one"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/extended_time"
        app:layout_constraintEnd_toEndOf="@+id/extended_time"
        android:background="@drawable/oval_shape_yellow" />

</androidx.constraintlayout.widget.ConstraintLayout>